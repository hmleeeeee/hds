{
	"source": ["figma_token.json"],
	"platforms": {
		"css": {
			"transformGroup": "css",
			"buildPath": "build/",
			"files": [
				{
					"destination": "tokens.css",
					"format": "css/variables",
					"options": {
						"outputReferences": true // 토큰 참조값 사용(var)
					}
				}
			]
		},
		"scss": {
			"transformGroup": "scss",
			"buildPath": "build/",
			"files": [
				{
					"destination": "tokens.scss",
					"format": "scss/variables"
				}
			]
		}
	}
}
